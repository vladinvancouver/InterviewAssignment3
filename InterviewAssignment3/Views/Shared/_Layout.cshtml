<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <script src="~/lib/jquery-3.6.3/jquery.min.js"></script>
    <link rel="stylesheet" href="~/lib/bootstrap-5.2.3/css/bootstrap.min.css">
    <link rel="stylesheet" href="~/lib/fontawesome-free-6.0.0-web/css/all.min.css">
    <script src="~/lib/popper-2.11.2/popper.min.js"></script>
    <script src="~/lib/bootstrap-5.2.3/js/bootstrap.min.js"></script>
    <script src="~/lib/moment-2.29.1/moment.js"></script>
    <script src="~/lib/moment-duration-format-2.2.2/moment-duration-format.js"></script>
    <script src="~/js/common.js?1"></script>
    <script src="~/js/project.js?1"></script>
    @RenderSection("scripts", false)
    @RenderSection("style", false)
    <title>@ViewData["Title"]</title>
    <style>
        body {
            padding-top: 70px;
        }
    </style>
</head>
<body>
    <header>
        <nav class="navbar fixed-top navbar-light bg-light" style="padding:10px">
            <h3>QA Engineer Interview Assignment</h3>
            <us class="dropdown">
                <a class="btn btn-secondary dropdown-toggle" href="#" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                    <i class="fas fa-user"></i> @(String.IsNullOrWhiteSpace(User?.Identity?.Name) ? "Anonymous" : User.Identity.Name)
                </a>

                <ul class="dropdown-menu">
                    <li><a class="dropdown-item" href="@(Url.Action("Manual", "SignOut"))">Sign out</a></li>
                </us>
            </div>
        </nav>
    </header>
    <main class="container">
        @RenderBody()
    </main>
</body>
</html>